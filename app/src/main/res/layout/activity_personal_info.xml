<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/status_hight"
        android:background="?attr/bgColor"/>

    <RelativeLayout
        android:id="@+id/rlPersonalInfo"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:paddingTop="15dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:background="?attr/bgColor"
        android:transitionName="sideMenu_personalInfo">
        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/icon_back_white"
            />
        <ImageView
            android:id="@+id/ivEditInfo"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/icon_edit_info"/>
        <com.evecom.myview.MyCircleImage
            android:id="@+id/ivAvatar"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:src="@drawable/default_avatar"
            android:transitionName="ivSharedHead"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/ivAvatar"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center">
                <TextView
                    android:id="@+id/tvGuanzhuCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="0"
                    android:textColor="#ffffff"
                    android:textSize="16sp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/shape_button_normal"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="关注数："
                    android:textColor="#ffffff"
                    android:textSize="16sp"
                    android:layout_toLeftOf="@id/tvGuanzhuCount"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center">
                <TextView
                    android:id="@+id/tvFensiCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="#ffffff"
                    android:textSize="16sp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/shape_button_normal"
                    android:layout_alignParentRight="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="粉丝数："
                    android:textColor="#ffffff"
                    android:textSize="16sp"
                    android:layout_toLeftOf="@id/tvFensiCount"/>
            </RelativeLayout>

        </LinearLayout>
        <!--分页指示器-->
        <net.lucode.hackware.magicindicator.MagicIndicator
            android:id="@+id/magicIndicator"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            />
    </RelativeLayout>


    <android.support.v4.view.ViewPager
        android:id="@+id/vpPersonalInfo"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v4.view.ViewPager>

</LinearLayout>
